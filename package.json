{
	"private": true,
	"name": "sars-angel",
	"version": "1.0.0",
	"scripts": {
		"build": "run-s build:clean build:code",
		"build:clean": "rimraf dist",
		"build:code": "tsc",
		"start": "node dist/entry.js",
		"dev": "nodemon src/entry.ts",
		"dev:debug": "nodemon --inspect src/entry.ts",
		"fmt": "prettier --write '**/*.{js,ts}'",
		"fmt:p": "prettier-package-json --write",
		"prod": "run-s build && node dist/entry.js",
		"test": "jest --no-cache"
	},
	"jest": {
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "\\.test\\.ts",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"arrowParens": "always"
	},
	"dependencies": {
		"bull": "^3.18.0",
		"bull-board": "^0.9.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "4.17.1",
		"messagebird": "^3.5.0",
		"postmark": "^2.6.0",
		"ts-node": "9.0.0",
		"winston": "3.3.3"
	},
	"devDependencies": {
		"@types/bull": "^3.14.4",
		"@types/bull-board": "^0.6.0",
		"@types/cors": "^2.8.8",
		"@types/express": "4.17.8",
		"@types/jest": "26.0.14",
		"@types/node": "^14.11.8",
		"@types/supertest": "2.0.10",
		"jest": "26.5.2",
		"nodemon": "2.0.4",
		"npm-run-all": "4.1.5",
		"prettier": "2.1.2",
		"rimraf": "3.0.2",
		"supertest": "5.0.0",
		"ts-jest": "26.4.1",
		"typescript": "4.0.3"
	}
}
